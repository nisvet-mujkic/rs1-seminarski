@model RegijeDodajViewModel
@{
    ViewData["Title"] = "Dodaj";
}

<section id="main-content">
    <section class="wrapper">
        <div class="panel">
            <div class="panel-heading">
                <h3>Dodaj regiju</h3>

            </div>
            <div class="panel-body">
                <form asp-action="Dodaj" method="post">
                    <div class="form-body">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }

                        <div class="form-group">
                            <label>Naziv:</label>
                            <input asp-for="Regija.Naziv" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Oznaka:</label>
                            <input asp-for="Regija.Oznaka" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Drzava:</label>
                            <select asp-for="Regija.DrzavaID" asp-items="Model.Drzave" class="form-control"></select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button class="btn btn-primary"><i class="fa fa-save"></i> Sačuvaj</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</section>
