
@{
    ViewData["Title"] = "Uredi";
}

<h2>Dodaj</h2>

@model Ponuda

<section id="main-content">
    <section class="wrapper">
        <section class="panel">
            <header class="panel-heading">
                <h2>Dodaj</h2>

            </header>

            <div class="panel-body">
                <form asp-action="Uredi" method="post">

                    <input asp-for="@Model.PonudaID" hidden />
                    <input asp-for="@Model.ClanUpraveID" hidden />



                    @if (!ViewData.ModelState.IsValid)
            {
                        <div asp-validation-summary="All" class="alert alert-danger"></div>
                    }

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Naziv">Naziv:</label>
                                <input asp-for="Naziv" class="form-control" />
                            </div>
                        </div>


                        <div class="col-md-4">

                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PotrebnoVrijeme">PotrebnoVrijeme (Mjeseci):</label>
                                <input asp-for="PotrebnoVrijeme" class="form-control" />
                            </div>
                        </div>



                    </div>


                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="PredlozenaCijena">Predlozena cijena:</label>
                                <input asp-for="PredlozenaCijena" class="form-control" />

                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-4">

                            <div class="form-group">
                                <label asp-for="Sadrzaj">Sadrzaj:</label>
                                <textarea asp-for="Sadrzaj" class="form-control" cols="10" rows="12"></textarea>
                            </div>

                        </div>


                    </div>




                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Sacuvaj</button>
                                <a asp-action="Index" class="btn btn-default"><i class="fa fa-times"></i> Odustani</a>
                            </div>
                        </div>
                    </div>

                </form>

            </div>>
        </section>
    </section>
</section>