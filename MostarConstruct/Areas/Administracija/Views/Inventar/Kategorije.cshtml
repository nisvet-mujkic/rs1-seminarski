@model List<Kategorija>
@{
    ViewData["Title"] = "Kategorije";
}

<section id="main-content">
    <section class="wrapper">
        <section class="">
            <div class="panel-heading">
                <h3>Kategorije</h3>
            </div>

            <div class="panel-body">
                @foreach (var k in Model)
                {
                <div class="col-md-4">
                    <section class="panel">
                        <div class="panel-body">
                            <div class="chart">
                               <img src="~/images/hammer.png" width="50" height="50"/>
                            </div>
                        </div>
                        <footer class="pie-foot">
                            @k.Naziv
                        </footer>
                    </section>
                </div>
                }

            </div>
        </section>
    </section>
</section>
