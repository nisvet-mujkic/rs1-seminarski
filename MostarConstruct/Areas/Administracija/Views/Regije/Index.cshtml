@model RegijeIndexViewModel
@{
    ViewData["Title"] = "Index";
}
<section id="main-content">
    <section class="wrapper">
        <div class="panel">
            <div class="panel-heading">
                <h2>Regije</h2>
            </div>
            <div class="panel-body">

                <div class="pull-right">
                    <a asp-action="Dodaj" class="btn btn-primary"><i class="fa fa-plus"></i> Dodaj</a>
                </div>
                <br />
                <br />
                <br />

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Regija</th>
                            <th>Oznaka</th>
                            <th>Drzava</th>
                            <th class="text-center">Akcije</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Rows)
                        {
                            <tr>
                                <td>@r.Naziv</td>
                                <td>@r.Oznaka</td>
                                <td>@r.Drzava</td>
                                <td class="text-center">
                                    <form asp-action="Obrisi" method="post">
                                        <a asp-action="Uredi" asp-route-id="@r.RegijaID" class="btn btn-info"><i class="fa fa-pencil"></i> Uredi</a>
                                        <input name="id" value="@r.RegijaID" hidden />
                                        <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Obrisi</button>

                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="row">
                    <div class="col-md-12">
                        <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true"
                             page-class="btn" page-class-normal="btn-default"
                             page-class-selected="btn-primary" class="btn-group pull-right">
                        </div>
                    </div>
                </div>

                <div id="ajaxDiv">

                </div>

            </div>
        </div>
    </section>
</section>
