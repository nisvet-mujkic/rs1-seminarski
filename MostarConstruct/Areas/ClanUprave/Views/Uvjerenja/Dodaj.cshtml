@model MostarConstruct.Web.Areas.ClanUprave.ViewModels.UvjerenjaDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<section id="main-content">
    <section class="wrapper">
        <section class="panel">
            <header class="panel-heading">
                <h2>Dodaj uvjerenje</h2>

            </header>

            <div class="panel-body">
               <form action="/ClanUprave/Uvjerenja/Snimi/">
                   @if (!ViewData.ModelState.IsValid)
                   {
                       <div asp-validation-summary="All" class="alert alert-danger"></div>

                   }
                   <div class="row">
                       <div class="col-md-4">
                           <label asp-for="RadnikId">Odaberite radnika: </label>
                           @Html.DropDownListFor(model => model.RadnikId, Model.listaRadnika, new { @class = "form-control" })
                       </div>
                       <div class="col-md-4">
                           <label asp-for="Svrha">Unesite svrhu uvjerenja: </label>
                           <textarea asp-for="Svrha" cols="20" rows="7" class="form-control"></textarea>
                       </div>
                       <div class="col-md-4">
                           <label asp-for="Napomena">Unesite napomenu: </label>
                           <textarea asp-for="Napomena" cols="20" rows="7" class="form-control"></textarea>
                       </div>
                       <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Sacuvaj</button>
                       <a asp-action="Index" class="btn btn-default"><i class="fa fa-times"></i> Odustani</a>
                   </div>
               </form>

            </div>
        </section>
    </section>
</section>

